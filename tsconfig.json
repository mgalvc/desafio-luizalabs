{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs",                           
    "lib": ["es6"],                                 
    "outDir": "./dist",                             
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "tests"
  ],
}
